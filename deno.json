{
  "tasks": {
    "dev": "deno run --unstable-kv --env-file --allow-net --allow-env --allow-read --watch src/main.ts",
    "test": "deno test --unstable-kv --allow-all",
    "check": "deno task lint && deno task fmt --check && deno task test"
  },
  "imports": {
    "hono": "npm:hono@^4",
    "@std/assert": "jsr:@std/assert@^1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
