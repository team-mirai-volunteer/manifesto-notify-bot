{
  "tasks": {
    "dev": "deno run --unstable-kv --env-file --allow-net --allow-env --allow-read --watch src/main.ts",
    "test": "deno test --unstable-kv --allow-all",
    "check": "deno lint && deno fmt --check && deno task test"
  },
  "imports": {
    "hono": "npm:hono@^4",
    "@std/assert": "jsr:@std/assert@^1",
    "zod": "npm:zod@^3",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
