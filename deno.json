{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --env-file --watch src/main.ts",
    "test": "deno test",
    "check": "deno lint && deno fmt --check && deno check && deno test",
    "deploy": "deployctl deploy --org team-mirai --project manifesto-notify --prod",
    "import-pr": "deno run --unstable-kv --env-file --allow-net --allow-env --allow-read src/scripts/import_merged_pr.ts",
    "clear-kv": "deno run --env-file -P=prod src/scripts/clear_kv.ts"
  },
  "imports": {
    "@openai/openai": "jsr:@openai/openai@^5.9.0",
    "hono": "npm:hono@^4",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing/mock": "jsr:@std/testing@^1/mock",
    "twitter-api-v2": "npm:twitter-api-v2@^1.24.0",
    "zod": "npm:zod@^3",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "singleQuote": true
  },
  "unstable": ["kv"],
  "permissions": {
    "default": {},
    "prod": {
      "net": ["api.deno.com", "*.deno-gcp.net"],
      "env": ["DENO_KV_ACCESS_TOKEN"]
    }
  }
}
